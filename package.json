{
  "name": "arcanum-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:ci": "next lint && npx tsc --noEmit",
    "db:backup": "node scripts/ops/backup-tables.js",
    "db:migrate:spheres": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"if (-not $Env:DATABASE_URL) { throw 'DATABASE_URL not set' }; psql $Env:DATABASE_URL -f ./supabase/migrations/0002_add_sphere_code_and_seed_function.sql; psql $Env:DATABASE_URL -f ./supabase/migrations/0003_seed_spheres_v9_initial.sql\"",
    "db:map12to9": "node scripts/migrations/map_tasks_12_to_9.js --map=scripts/migrations/legacy_to_v9_map.sample.json",
    "test:resonance": "cross-env TS_NODE_PROJECT=tsconfig.test.json node -r ts-node/register/transpile-only __tests__/resonance.unit.test.ts",
    "test:orchestrator": "cross-env TS_NODE_PROJECT=tsconfig.test.json node -r ts-node/register/transpile-only __tests__/orchestrator.e2e.test.ts",
    "test:all": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"npm run test:resonance; npm run test:orchestrator\""
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@stripe/stripe-js": "^7.8.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.53.0",
    "@types/lodash.debounce": "^4.0.9",
    "dotenv": "^17.2.1",
    "lodash.debounce": "^4.0.8",
    "next": "15.4.5",
    "nodemailer": "^7.0.5",
    "openai": "^5.11.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-zoom-pan-pinch": "^3.7.0",
    "stripe": "^18.4.0",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "eslint-plugin-import": "^2.32.0",
    "madge": "^8.0.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
